#!/bin/bash
# Pre-push hook: Validates builds and tests before pushing
# Install with: make install-hooks

set -e

echo "Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track failures
FAILED=0

# 1. Go backend build
echo -e "${YELLOW}[1/5] Building Go backend...${NC}"
if make build > /dev/null 2>&1; then
    echo -e "${GREEN}  ✓ Go build passed${NC}"
else
    echo -e "${RED}  ✗ Go build failed${NC}"
    FAILED=1
fi

# 2. Go tests
echo -e "${YELLOW}[2/5] Running Go tests...${NC}"
if go test ./... > /dev/null 2>&1; then
    echo -e "${GREEN}  ✓ Go tests passed${NC}"
else
    echo -e "${RED}  ✗ Go tests failed${NC}"
    FAILED=1
fi

# 3. Go lint (if golangci-lint is installed)
echo -e "${YELLOW}[3/5] Running Go lint...${NC}"
if which golangci-lint > /dev/null 2>&1; then
    if golangci-lint run --timeout 2m > /dev/null 2>&1; then
        echo -e "${GREEN}  ✓ Go lint passed${NC}"
    else
        echo -e "${RED}  ✗ Go lint failed${NC}"
        FAILED=1
    fi
else
    echo -e "${YELLOW}  ⊘ Skipped (golangci-lint not installed)${NC}"
fi

# 4. Frontend build
echo -e "${YELLOW}[4/5] Building frontend...${NC}"
FRONTEND_DIR="./cmd/agent-deck-desktop/frontend"
if [ -d "$FRONTEND_DIR" ]; then
    if (cd "$FRONTEND_DIR" && npm run build > /dev/null 2>&1); then
        echo -e "${GREEN}  ✓ Frontend build passed${NC}"
    else
        echo -e "${RED}  ✗ Frontend build failed${NC}"
        FAILED=1
    fi
else
    echo -e "${YELLOW}  ⊘ Skipped (frontend directory not found)${NC}"
fi

# 5. Frontend tests + lint
echo -e "${YELLOW}[5/5] Running frontend tests & lint...${NC}"
if [ -d "$FRONTEND_DIR" ]; then
    # Run tests
    if (cd "$FRONTEND_DIR" && npm test -- --run > /dev/null 2>&1); then
        echo -e "${GREEN}  ✓ Frontend tests passed${NC}"
    else
        echo -e "${RED}  ✗ Frontend tests failed${NC}"
        FAILED=1
    fi

    # Run ESLint if configured
    if [ -f "$FRONTEND_DIR/.eslintrc.json" ] || [ -f "$FRONTEND_DIR/eslint.config.js" ]; then
        if (cd "$FRONTEND_DIR" && npm run lint > /dev/null 2>&1); then
            echo -e "${GREEN}  ✓ Frontend lint passed${NC}"
        else
            echo -e "${RED}  ✗ Frontend lint failed${NC}"
            FAILED=1
        fi
    fi
else
    echo -e "${YELLOW}  ⊘ Skipped${NC}"
fi

# Summary
echo ""
if [ $FAILED -eq 1 ]; then
    echo -e "${RED}Pre-push checks failed. Push aborted.${NC}"
    echo "Run individual checks to see detailed errors:"
    echo "  make build && make test && make lint"
    echo "  cd cmd/agent-deck-desktop/frontend && npm run build && npm test"
    exit 1
else
    echo -e "${GREEN}All pre-push checks passed!${NC}"
    exit 0
fi
